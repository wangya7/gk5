<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wang.bannong.gk5.test.mybatisx.mapper.ShiroUserMapper">

  <resultMap id="BaseResultMap" type="wang.bannong.gk5.test.mybatisx.common.ShiroUser">
    <id column="id" jdbcType="BIGINT" property="id"/>
    <result column="name" jdbcType="VARCHAR" property="name"/>
    <result column="role" jdbcType="VARCHAR" property="role"/>
    <result column="passwd" jdbcType="VARCHAR" property="passwd"/>
    <result column="permission" jdbcType="VARCHAR" property="permission"/>
    <result column="score" jdbcType="BIGINT" property="score"/>
  </resultMap>

  <select id="selectByName" parameterType="java.lang.String" resultMap="BaseResultMap">
    select
    id, name, role, passwd, permission
    from shiro_user
    where name=#{name}
  </select>

</mapper>
